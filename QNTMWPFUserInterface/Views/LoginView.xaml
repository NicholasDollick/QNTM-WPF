<UserControl x:Class="QNTMWPFUserInterface.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QNTMWPFUserInterface.Views"
             mc:Ignorable="d" 
             xmlns:behaviors="clr-namespace:QNTMWPFUserInterface.EventModels"
             d:DesignHeight="667" d:DesignWidth="375">
    <Border Background="Gray" CornerRadius="20" Margin="0 100 0 150" Opacity="0.90">
        <StackPanel Margin="20">
            <Label Content="Sign In" Foreground="White" FontSize="25"
                   HorizontalAlignment="Center"/>

            <Separator></Separator>

            <!-- ERROR MSG-->
            <TextBlock x:Name="ErrorMessage"
                   Margin="0 0 0 20" Foreground="Red" FontSize="16" MaxWidth="300"
                   TextWrapping="Wrap" 
                   Visibility="{Binding IsErrorVisible, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Collapsed}" 
                   />
            <TextBlock Margin="0 0 0 10">
            Username:
            </TextBlock>
            <TextBox x:Name="UserName" MinWidth="200" Margin="5 0 0 20"
                 BorderThickness="0 0 0 1" BorderBrush="Black" Background="Transparent" 
                 SelectionBrush="Black"/>

            <!-- PASSWORD -->
            <TextBlock Margin="0 0 0 10">
            Password:
            </TextBlock>
            <PasswordBox x:Name="Password" MinWidth="150" Margin="5 0 0 10"
                     BorderThickness="0 0 0 1" BorderBrush="Black" 
                     Background="Transparent" SelectionBrush="Black"/>

            <!-- CONTROLS -->
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button HorizontalAlignment="Center"
                x:Name="LogIn" Padding="50 5" Margin="0 10 0 20" Background="#FFC5FF00">
                    Sign In
                </Button>

                <Button HorizontalAlignment="Center" 
                    x:Name="Cancel" Padding="50 5" Margin="10 10 10 20" Background="#FFC5FF00">
                    Cancel
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
